// Make song index
PUT song
{  
   "settings":{  
      "number_of_shards":3,
      "number_of_replicas":2
   },
   "mappings":{  
      "properties":{  
         "title":{  
            "type":"keyword"
         },
         "duration":{  
            "type":"integer"
         }
      }
   }
}

